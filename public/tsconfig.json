{
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "module": "amd",
        "moduleResolution": "node",
        "newLine": "lf",
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "lib": [
            "dom",
            "es2015.promise",
            "es2015.iterable",
            "es5"
        ],
        "baseUrl": "./module",
        "types": [
            "jasmine",
            "jquery",
            "lib"
        ],
        "typeRoots": [
            "node_modules/@types",
            "module/system"
        ]
    },
    "include": [
        "module/*/lib/**/*.ts",
        "module/*/app/**/*.ts",
        "module/*/test/**/*.ts"
    ]
}
