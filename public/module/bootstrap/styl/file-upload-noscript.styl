/* fileupload-noscript */
.fileinput-button input
    position static
    opacity 1
    filter none
    font-size inherit
    direction inherit

.fileinput-button span
    display none

/* fileupload-noscript-ui */
.fileinput-button i,
.fileupload-buttonbar .delete,
.fileupload-buttonbar .toggle
    display none
