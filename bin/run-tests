php -f $SCRIPT_DIR_PATH/../vendor/phpunit/phpunit/phpunit -- $([[ -n "${TRAVIS-}" ]] && echo '--debug') -c $SCRIPT_DIR_PATH/../test/server/phpunit.xml "$@"
